<!doctype html>

<html>
<head>
	<title>SlyStyles</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/header.css" rel="stylesheet">
	<link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
	<link href="/css/slystyles.css" rel="stylesheet">
	<link href="/css/alternative-item.css" rel="stylesheet">
	<link href="/css/mymatchesmade.css" rel="stylesheet">
</head>

<body style="padding-top:70px">

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>

			<nav class="navbar-inverse navbar-default navbar-fixed-top" role="navigation" id="top">
		<div class="container" >
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/">SlyStyles</a>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->

			<div class="collapse navbar-collapse navbar-ex1-collapse">
				<table class="wider ">
					<tr >
						<td class="leftBar">
							<img class="smaller" src = {{user.imageURL}}></img>
						</td>
						<td>
							<ul class="nav navbar-nav navbar-right"  id="dropdown" >
								<li>
									<a href="profile.html" target="_self"><i class="fa fa-user"></i>&nbsp; {{user.name}}</a>
								</li>
								<li>
									<a href="settings.html" target="_self"><i class="fa fa-gears"></i>&nbsp; Settings</a>
								</li>
								<li>
									<a href="/logout" target="_self"><i class="fa fa-power-off"></i>&nbsp; Logout</a>
								</li>
							</ul>
						</td>
					</tr>
				</table>
			</div><!-- /.navbar-collapse -->
		</div>
	</nav>
	
	<a href="/designerItem/{{prevDesignerItemID}}" target="_self"><i class="fa fa-arrow-left fa-2x"></i>&nbsp; Designer Item</a>
	<h1><center>Alternative Item</center></h1>
	<!-- TODO nav links to proper pages as per nav layout in Drive -->

	<div class="container">
		<div class="alternative-item">
			<div class="alternative-item-title">
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th class="brand">{{altItem.brand}}</th>
								<th></th> <!-- this is to keep line weight uniform -->
							</tr>
							<tr>
								<td class="item-name">{{altItem.name}}</td>
								<td class="price">${{altItem.price}}</td>
							</tr>
						</thead>
					</table>
				</div>
			</div>
			<div class="thumbnail designer-thumbnail">
				<a href="#"><img src="{{image}}" alt="foo1" class="img-responsive"></a>
				<div class="caption">
					<h3>Thumbnail label</h3>
					<p>{{altItem.description}}</p>
					<p>
						<a href="#" class="btn btn-primary" role="button">Like</a>
					</p>
				</div>
			</div>
		</div>
	</div>

</body>
</html>
