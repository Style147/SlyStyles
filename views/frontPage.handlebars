<!doctype html>

<html>
<head>
	<title>SlyStyles</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/header.css" rel="stylesheet">
	<link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
	<link href="/css/slystyles.css" rel="stylesheet">
</head>

<body style="padding-top: 50px">

	{{#if navbarLikes}}
	<nav class="navbar navbar-inverse navbar-default navbar-fixed-top" role="navigation" id="top">
		<div class="container-fluid">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<div class="navbar-toggle">
					<a href="/profile"><i class="fa fa-heart fa-2x liked"></i></a>
				</div>
				<a class="navbar-brand" href="/frontpage">SlyStyles</a>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->

			<div class="collapse navbar-collapse navbar-ex1-collapse">
				<table class="wider ">
					<tr>
						<td class="leftBar">
							<img class="smaller" src={{user.imageURL}}></img>
						</td>
						<td>
							<ul class="nav navbar-nav navbar-right"  id="dropdown" >
								<li>
									<a href="/profile" target="_self"><i class="fa fa-user"></i>&nbsp; {{user.name}}</a>
								</li>
								<li>
									<a href="/settings" target="_self"><i class="fa fa-gears"></i>&nbsp; Settings</a>
								</li>
								<li>
									<a href="/logout" target="_self"><i class="fa fa-power-off"></i>&nbsp; Logout</a>
								</li>
							</ul>
						</td>
					</tr>
				</table>
			</div><!-- /.navbar-collapse -->
		</div>
	</nav>
	{{else}}
	<nav class="navbar navbar-inverse navbar-default navbar-fixed-top" role="navigation" id="top">
		<div class="container-fluid" >
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/frontpage">SlyStyles</a>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->

			<div class="collapse navbar-collapse navbar-ex1-collapse">
				<table class="wider ">
					<tr>
						<td class="leftBar">
							<img class="smaller" src={{user.imageURL}}></img>
						</td>
						<td>
							<ul class="nav navbar-nav navbar-right"  id="dropdown" >
								<li>
									<a href="/profile" target="_self"><i class="fa fa-user"></i>&nbsp; {{user.name}}</a>
								</li>
								<li>
									<a href="/settings" target="_self"><i class="fa fa-gears"></i>&nbsp; Settings</a>
								</li>
								<li>
									<a href="/logout" target="_self"><i class="fa fa-power-off"></i>&nbsp; Logout</a>
								</li>
							</ul>
						</td>
					</tr>
				</table>
			</div><!-- /.navbar-collapse -->
		</div>
	</nav>
	{{/if}}


	<!-- Container for rest feed/list of items  -->
	<div class="container">
		<h1><center>Hot Items</center></h1>
		<!-- upload button -->
		<div class="col-xs-3">
			<div class="input-group  center"><button class="btn btn-primary" data-toggle="modal" data-target="#myModal"> Upload Designer Item </button>
			</div>
		</div>
		
		<!-- search bar -->
		<div class="col-xs-6">
			<div class="input-group">
				<form action="/frontPage/search" method="get">
					<input type="text" id="searchTextBox" placeholder="Search Designer Items" class="form-control" name="searchText"></input>
					<span class="input-group-btn">
						<button class="btn btn-default" id="searchBtn" type="button">Go!</button>
					</span>
				</form>
			</div><!-- /input-group -->
		</div><!-- /.col-lg-6 -->

		{{#if noItems}}
		<h4>No Items Match That Search</h4>
		{{else}}
		{{#each designerItems}}
		<div class="designer-item-feed" id="{{_id}}">
			<div class="row">
				<div class="col-xs-12">
					<div class="designer-thumbnail thumbnail">
						<a href="/designerItem/{{_id}}"><img src="{{image}}" alt="foo1" class="img-responsive"></a>
						<div class="caption">
							<a href="/designerItem/{{_id}}"><h3>{{name}}</h3><p/><h4>by {{brand}}</h4></a>
							
							{{#if liked}}
							<p>
								<a href="/dunlike/{{_id}}"><i class="fa fa-heart fa-2x liked"> </i></a>{{likes}}
							</p>
							{{else}}
							<a href="/dlike/{{_id}}"><i class="fa fa-heart fa-2x unliked"> </i></a>{{likes}}
							</p>
							{{/if}}
							{{#if buylink}}	
							<p>
								<a href="{{buylink}}" class="btn btn-primary" role="button">Buy</a>
							</p>	
							{{/if}}
							<p class="tags">tags: {{#each tags}}<a href="/tag/{{.}}">{{.}} </a>{{/each}}</p>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{/each}}
		{{/if}}
	</div>

	<!-- Modal -->
	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title" id="myModalLabel">Upload File</h4>
				</div>
				<div class="modal-body hideInput">
					<div class = "form-group">
						<form action="/addDesignerItem" enctype="multipart/form-data" method="post">
						Brand:	
						<input type="text" class="upload-form form-control" id="brand" name="brand"> <br>
						Item Description: 
						<input type="text" class="upload-form form-control" id="name" name="name"> <br>
						Price:	
						<input type="text" class="upload-form form-control" id="price" name="price"> <br>
						Image URL:	
						<input type="text" class="upload-form form-control" id="imageURL" name="imageURL"> <br>
						Tags:	
						<input type="text" class="upload-form form-control" id="tags" name="tags"> <br>
						<input type="submit" class="upload-form form-control" value="Upload">
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>



	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/frontPage.js"></script>
	
 


</body>

</html>