<!doctype html>

<html>
<head>
	<title>SlyStyles</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/header.css" rel="stylesheet">
	<link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
	<link href="/css/slystyles.css" rel="stylesheet">
</head>

<body style="padding-top:70px">

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>

	<nav class="navbar-inverse navbar-default navbar-fixed-top" role="navigation" id="top">
		<div class="container" >
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/frontpage">FASHIONCENTS</a>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->

			<div class="collapse navbar-collapse navbar-ex1-collapse">
				<table class="wider ">
					<tr >
						<td class="leftBar">
							<img class="smaller" src={{user.imageURL}}></img>
						</td>
						<td>
							<ul class="nav navbar-nav navbar-right"  id="dropdown" >
								<li>
									<a href="/profile" target="_self"><i class="fa fa-user"></i>&nbsp; {{user.name}}</a>
								</li>
								<li>
									<a href="/settings" target="_self"><i class="fa fa-gears"></i>&nbsp; Settings</a>
								</li>
								<li>
									<a href="/logout" target="_self"><i class="fa fa-power-off"></i>&nbsp; Logout</a>
								</li>
							</ul>
						</td>
					</tr>
				</table>
			</div><!-- /.navbar-collapse -->
		</div>
	</nav>

	<h2>Tag: {{tag}}</h2>
	<h2>Designer Items</h2>
	<div class="row">
		{{#each designerItems}}
		<div class="designer-item-feed" id="{{_id}}">
			<div class="col-xs-6">
				<div class="designer-thumbnail thumbnail">
					<a href="/designerItem/{{_id}}"><img src="{{image}}" alt="foo1" class="img-responsive"></a>
					<div class="caption">
						<a href="/designerItem/{{_id}}"><h3>{{name}}</h3><p/><h4>by {{brand}}</h4></a>

						{{#if liked}}
						<p>
							<a href="/dunlike/{{_id}}"><i class="fa fa-heart fa-2x liked"> </i></a>{{likes}}
						</p>
						{{else}}
						<p>
							<a href="/dlike/{{_id}}"><i class="fa fa-heart fa-2x unliked"> </i></a>{{likes}}
						</p>
						{{/if}}
						<p class="tags">tags: {{#each tags}}<a href="/tag/{{.}}">{{.}} </a>{{/each}}</p>
					</div>
				</div>
			</div>
		</div>
		{{/each}}
	</div>
	<hr>
	<h2>Alt Items</h2>
		<div class="row">
			{{#each altItems}}
			<div class="designer-item-feed" id="{{_id}}">

				<div class="col-xs-6">
					<div class="designer-thumbnail thumbnail">
						<a href="/designerItem/{{designerMatch}}/altItem/{{_id}}"><img src="{{image}}" alt="foo1" class="img-responsive"></a>
						<div class="caption">
							<a href="/designerItem/{{designerMatch}}/altItem/{{_id}}"><h3>{{name}}</h3><p/><h4>by {{brand}}</h4></a>

							{{#if liked}}
							<p>
								<a href="/aunlike/{{_id}}"><i class="fa fa-heart fa-2x liked"> </i></a>{{likes}}
							</p>
							{{else}}
							<p>
								<a href="/alike/{{_id}}"><i class="fa fa-heart fa-2x unliked"> </i></a>{{likes}}
							</p>
							{{/if}}
							<p class="tags">tags: {{#each tags}}<a href="/tag/{{.}}">{{.}} </a>{{/each}}</p>
						</div>
					</div>
				</div>
			</div>
			{{/each}}
		</div>

