<!doctype html>

<html>
<head>
	<title>FashionCents</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/header.css" rel="stylesheet">
	<link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
	<link href="/css/slystyles.css" rel="stylesheet">
	<link href="/css/fonts.css" rel="stylesheet">
	<link href='http://fonts.googleapis.com/css?family=Playfair+Display' rel='stylesheet' type='text/css'>
</head>

<body style="padding-top:70px">

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/ajaxlikes.js"></script>

	<nav class="navbar navbar-inverse navbar-default navbar-fixed-top navbar-inner" role="navigation" id="top">
		<div class="container" >
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand t-head" href="/frontpage"><i class="fa fa-angle-left red"></i> FASHIONCENTS</a>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->

			<div class="collapse navbar-collapse navbar-ex1-collapse">
				<table class="wider ">
					<tr >
						<td class="leftBar">
							<img class="smaller" src={{user.imageURL}}></img>
						</td>
						<td>
							<ul class="nav navbar-nav navbar-right"  id="dropdown" >
								<li>
									<a href="/profile" target="_self" class="t-head front-like"><i class="fa fa-angle-left red"></i>&nbsp;  {{user.name}}</a>
								</li>
								<li>
									<a href="/logout" target="_self" class="t-head front-like"><i class="fa fa-angle-left red"></i>&nbsp; LOGOUT</a>
								</li>
							</ul>
						</td>
					</tr>
				</table>
			</div><!-- /.navbar-collapse -->
		</div>
	</nav>

	<div class="container">
		<div class="alternative-item-grid">
			<h3 class="italic fancy check">now viewing... </h3><h3 class="blackplayfair check">TAGGED: {{tag}}</h3>
			<br><br>
			<div class="row">
				{{#each designerItems}}
				<div class="col-xs-6">
					<div class="thumbnail">
						<a href="/designerItem/{{../designerItem._id}}/altItem/{{_id}}"><img src="{{image}}" alt="foo1" class="img-responsive"></a>

						<div class="caption caption-alt">
							<table class="front-table">
								<tr>
									<td>
										<a href="/designerItem/{{../designerItem._id}}/altItem/{{_id}}">
											<h5 class="item-name">{{name}}</h5>
											<h5 class="item-brand">by {{brand}}</h5>
											<h5 class="item-price">${{price}}</h5>
										</a>
									</td>
									<td class="front-like">
										{{#if liked}}
										<p>
											<a href="#" id="{{_id}}" class="unlikeable"><i class="fa fa-heart fa-2x liked"> </i></a><h4>{{likes}}</h4>
										</p>
										<p>
											{{else}}
											<a href="#" id="{{_id}}" class="likeable"><i class="fa fa-heart fa-2x unliked"> </i></a><h4>{{likes}}</h4>
										</p>
										{{/if}}
									</td>
								</tr>
							</table>
						</div>
					</div>
				</div>
				{{/each}}
			</div>
		</div>


	<div class="alternative-item-grid">
		<div class="row">
			{{#each altItems}}
			<div class="col-xs-6">
				<div class="thumbnail">
					<a href="/designerItem/{{../designerItem._id}}/altItem/{{_id}}"><img src="{{image}}" alt="foo1" class="img-responsive"></a>

					<div class="caption caption-alt">
						<table class="front-table">
							<tr>
								<td>
									<a href="/designerItem/{{../designerItem._id}}/altItem/{{_id}}">
										<h5 class="item-name">{{name}}</h5>
										<h5 class="item-brand">by {{brand}}</h5>
										<h5 class="item-price">${{price}}</h5>
									</a>
								</td>
								<td class="front-like">
									{{#if liked}}
									<p>
										<a href="#" id="{{_id}}" class="altunlikeable"><i class="fa fa-heart fa-2x liked"> </i></a><h4>{{likes}}</h4>
									</p>
									<p>
										{{else}}
										<a href="#" id="{{_id}}" class="altlikeable"><i class="fa fa-heart fa-2x unliked"> </i></a><h4>{{likes}}</h4>
									</p>
									{{/if}}
								</td>
							</tr>
						</table>
					</div>
				</div>
			</div>
			{{/each}}
		</div>
	</div>



