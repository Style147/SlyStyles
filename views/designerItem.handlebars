<!doctype html>

<html>
<head>
	<title>SlyStyles</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/header.css" rel="stylesheet">
	<link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
	<link href="/css/slystyles.css" rel="stylesheet">
	<link href="/css/fonts.css" rel="stylesheet">
	<link href='http://fonts.googleapis.com/css?family=Playfair+Display' rel='stylesheet' type='text/css'>
</head>

<body style="padding-top:70px">

	<nav class="navbar navbar-inverse navbar-default navbar-fixed-top navbar-inner" role="navigation" id="top">
		<div class="container" >
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand t-head" href="/frontpage"><i class="fa fa-angle-left red"></i> FASHIONCENTS</a>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->

			<div class="collapse navbar-collapse navbar-ex1-collapse">
				<table class="wider ">
					<tr >
						<td class="leftBar">
							<img class="smaller" src={{user.imageURL}}></img>
						</td>
						<td>
							<ul class="nav navbar-nav navbar-right"  id="dropdown" >
								<li>
									<a href="/profile" target="_self" class="t-head front-like"><i class="fa fa-angle-left red"></i>&nbsp;  {{user.name}}</a>
								</li>
								<li>
									<a href="/settings" target="_self" class="t-head front-like"><i class="fa fa-angle-left red"></i>&nbsp; SETTINGS</a>
								</li>
								<li>
									<a href="/logout" target="_self" class="t-head front-like"><i class="fa fa-angle-left red"></i>&nbsp; LOGOUT</a>
								</li>
							</ul>
						</td>
					</tr>
				</table>
			</div><!-- /.navbar-collapse -->
		</div>
	</nav>


	<!-- Container for rest feed/list of items  -->
	<div class="container">
		<div class="designer-item">
			<div class="designer-item-title">
				<div class="playfair" >
					<center><h4 class="italic check playfair">now viewing... </h4><h4 class="check playfair">SUBSTITUTES FOR</h4></center>
					<br><br>
					<table class="table">
						<thead>
							<tr>
								<td class="brand">
									{{designerItem.name}}
									<br> by {{designerItem.brand}}
									
								</td>
								<td>
									<td class="price">${{designerItem.price}}</td>
								</td>
								
								
							</tr>
							
						</thead>
					</table>
				</div>
			</div>
			<div class="thumbnail designer-thumbnail">
				<a href="#"><img src="{{designerItem.image}}" alt="foo1" class="img-responsive"></a>
				<div class="caption front-like">
					<table class="front-table">
						<tr>
							<td class="front-like">
					{{#if designerItem.liked}}
					<p>
						<a href="#" class="unlikeable" id="{{designerItem._id}}"><i class="fa fa-heart fa-2x liked"> </i></a><h4>{{designerItem.likes}}</h4>
					</p>
					{{else}}
					<p>
					<a href="#" class="likeable" id="{{designerItem._id}}"><i class="fa fa-heart fa-2x unliked"> </i></a><h4>
					{{designerItem.likes}}</h4>
				</td>
			</tr>
		</table>
				</p>
				{{/if}}
			</div>
			<p class="tags">tags: {{#each designerItem.tags}}<a href="/tag/{{.}}">{{.}} </a>{{/each}}</p>
		</div>

		<button class="btn full-width" data-toggle="modal" data-target="#myModal">UPLOAD</button>
		<br>
		<h5 class="blacklato"> SORT BY: </h5>
		<div class="alternative-item-list">
			<!-- title for section -->
			<center>

			<!-- alternative item list header bar
			should have filters -->
			<div class="button-bar">
				<p>
					<button class="btn-default btn-litetype" role="button" id="filterBtnLikes">LIKES</button>
					<button class="btn-default btn-litetype" role="button" id="filterBtnPriceHiLo">$$$ - $</button>
					<button class="btn-default btn-litetype" role="button" id="filterBtnPriceLoHi">$ - $$$</button>
				</p>
			</div>
		</center>
			<!-- the actual list of items
			start of grid -->
			
			<div class="alternative-item-grid">
				<h3 class="italic fancy">substitutes</h3>
				<div class="row">
					{{#each alts}}
					<div class="col-xs-6">
						<div class="thumbnail">
							<a href="/designerItem/{{../designerItem._id}}/altItem/{{_id}}"><img src="{{image}}" alt="foo1" class="img-responsive"></a>

							<div class="caption caption-alt">
								<table class="front-table">
									<tr>
										<td>
											<a href="/designerItem/{{../designerItem._id}}/altItem/{{_id}}">
												<h5 class="item-name">{{name}}</h5>
												<h5 class="item-brand">by {{brand}}</h5>
												<h5 class="item-price">${{price}}</h5>
											</a>
										</td>
										<td class="front-like">
											{{#if liked}}
											<p>
												<p>
													<a href="#" id="{{_id}}" class="altunlikeable"><i class="fa fa-heart fa-2x liked"> </i></a><h4>{{likes}}</h4>
												</p>
												<p>
												{{else}}
												<a href="#" id="{{_id}}" class="altlikeable"><i class="fa fa-heart fa-2x unliked"> </i></a><h4>{{likes}}</h4>
											</p>
											{{/if}}
										</td>
									</tr>
								</table>
									</div>
								</div>
							</div>
							{{/each}}
						</div>
					</div>
				</div>
			</div>

		</div>






		<!-- Modal -->
		<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						<h4 class="modal-title" id="myModalLabel">upload new alternative</h4>
					</div>
					<div class="modal-body hideInput">
						<div class = "form-group">
							<form id="newitem" action="/designerItem/{{designerItem._id}}/addAltForDesignerItem" enctype="multipart/form-data" method="post">
								BRAND:	
							<div class="input-group">
								<input type="text" class="upload-form form-control" id="brand" name="brand"> <br>
								<span class="input-group-addon validator wrong"><i class="fa fa-exclamation"></i></span>
							</div>
							ITEM DESCRIPTION: 
							<div class="input-group">
								<input type="text" class="upload-form form-control" id="name" name="name"> <br>
								<span class="input-group-addon validator wrong"><i class="fa fa-exclamation"></i></span>
							</div>
							PRICE:	
							<div class="input-group">
								<input type="text" class="upload-form form-control" id="price" name="price"> <br>
								<span class="input-group-addon validator wrong"><i class="fa fa-exclamation"></i></span>
							</div>
							IMAGE URL:
							<div class="input-group">	
								<input type="text" class="upload-form form-control" id="imageURL" name="imageURL"> <br>
								<span class="input-group-addon validator wrong"><i class="fa fa-exclamation"></i></span>
							</div>
							TAGS:	
							<div class="input-group">
								<input type="text" class="upload-form form-control" id="tags" name="tags"> <br>
							</div>
							<br>
							<input type="submit" class="upload-form form-control" value="Upload">
							</form>

						</div>
					</div>
				</div>
			</div>
		</div>


		<script src="https://code.jquery.com/jquery.js"></script>
		<script src="/js/bootstrap.min.js"></script>
		<script src="/js/designerItem.js"></script>
