<!doctype html>

<html>
<head>
	<title>SlyStyles</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/header.css" rel="stylesheet">
	<link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
	<link href="/css/slystyles.css" rel="stylesheet">
</head>

<body style="padding-top:70px">

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>

	<script type='text/javascript' src='/js/navbar.js'></script>


	<!-- Container for rest feed/list of items  -->
	<div class="container">
		<div class="designer-item">
			<div class="designer-item-title">
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th class="brand">{{brand}}</th>
								<th></th> <!-- this is to keep line weight uniform -->
							</tr>
							<tr>
								<td class="item-name">{{name}}</td>
								<td class="price">{{price}}</td>
							</tr>
						</thead>
					</table>
				</div>
			</div>
			<div class="thumbnail designer-thumbnail">
				<a href="#"><img src="{{image}}" alt="foo1" class="img-responsive"></a>
				<div class="caption">
					<h3>Thumbnail label</h3>
					<p>{{description}}</p>
					<p>
						<a href="#" class="btn btn-primary" role="button">Like</a>
						<a href="#" class="btn btn-default" role="button">Follow</a>
					</p>
				</div>
			</div>
		</div>

		<div class="alternative-item-list">
			<!-- title for section -->
			<div class="button-bar">
				<a href="/upload.html" class="btn btn-primary" role="button">Upload New Alternative</a>
				<a href="#" class="btn btn-primary" role="button">Buy</a>
			</div>

			<p>
			</p>

			<!-- alternative item list header bar
			should have filters -->
			<div class="button-bar">
				<p>Sort by: 
					<a href="#" class="btn btn-default" role="button">Likes</a>
					<a href="#" class="btn btn-default" role="button">$$$ - $</a>
					<a href="#" class="btn btn-default" role="button">$ - $$$</a>
				</p>
			</div>

			<!-- the actual list of items
			start of grid -->
			<div class="alternative-item-grid">
				{{#each altItems}}
				<div class="row">
					<div class="col-xs-6">
						<div class="thumbnail">
							<a href="{{../id}}/altItem/{{id}}"><img src="{{image}}" alt="foo1" class="img-responsive"></a>
							<div class="caption">
								<a href="{{../id}}/altItem/{{id}}">
									<h3>{{name}}</h3>
									<p/>
									<h5>by {{brand}}</h5>
								</a>
								<p>{{description}}</p>
								<p>
									<a href="#" class="btn btn-primary" role="button">Like</a>
									<a href="#" class="btn btn-default" role="button">Follow</a>
								</p>
							</div>
						</div>
					</div>
				</div>
				{{/each}}
			</div>
		</div>
	</div>

	
</body>

</html>
